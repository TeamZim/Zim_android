<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/flag_text"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:fontFamily="@font/omyu_pretty"
        android:text="flag"
        android:textSize="16sp"
        android:textColor="@color/primary_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/country_text"
        android:layout_width="70dp"
        android:layout_height="14dp"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/omyu_pretty"
        android:text="국가명"
        android:textSize="16sp"
        android:textColor="@color/primary_700"
        app:layout_constraintBottom_toBottomOf="@+id/flag_text"
        app:layout_constraintStart_toEndOf="@+id/flag_text"
        app:layout_constraintTop_toTopOf="@+id/flag_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground">

    <include
        android:id="@+id/common_header"
        layout="@layout/common_header" />

    <ImageView
        android:id="@+id/frame_img"
        android:layout_width="350dp"
        android:layout_height="579dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_1" />

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="@+id/frame_img"
        app:layout_constraintTop_toTopOf="@+id/frame_img"
        app:srcCompat="@drawable/angle_bracket" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/nanum_neuris"
        android:text="새로운 여행을 시작해요 ✈️"
        android:textColor="@color/primary_700"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/frame_img"
        app:layout_constraintStart_toStartOf="@+id/frame_img"
        app:layout_constraintTop_toTopOf="@+id/frame_img" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/frame_img"
        app:layout_constraintStart_toStartOf="@+id/frame_img"
        app:layout_constraintTop_toBottomOf="@+id/title_text">


        <TextView
            android:id="@+id/trip_title_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_neuris"
            android:text="여행명"
            android:textColor="@color/primary_700"
            android:textSize="26sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/trip_title_inputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:hintEnabled="false"
            style="@style/CustomTextInputLayout"
            app:counterMaxLength="14">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/trip_title"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:fontFamily="@font/nanum_neuris"
                android:background="@android:color/transparent"
                android:hint="여행명을 입력하세요."
                android:inputType="text"
                android:maxLength="14"
                android:paddingTop="0dp"
                android:paddingStart="0dp"
                android:paddingBottom="0dp"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/trip_description_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_neuris"
            android:text="여행 설명"
            android:textColor="@color/primary_700"
            android:textSize="26sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/trip_description_inputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CustomTextInputLayout"
            app:counterEnabled="true"
            app:hintEnabled="false"
            app:counterMaxLength="54">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/trip_description"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rectangle_1"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:hint="여행에 대한 설명을 입력하세요."
                android:fontFamily="@font/nanum_neuris"
                android:textSize="18sp"
                android:lines="3"
                android:maxLength="54"
                android:maxLines="3"
                android:minLines="3"
                android:padding="16dp" />
            />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/theme_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_neuris"
            android:text="카드 테마 설정"
            android:textColor="@color/primary_700"
            android:textSize="26sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/theme_layout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                >

                <ImageView
                    android:id="@+id/theme_Btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/selected_rectangle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_neuris"
                    android:textColor="@color/primary_700"
                    android:text="기본"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/theme_layout_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginLeft="12dp"
                >

                <ImageView
                    android:id="@+id/theme_Btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/unselected_rectangle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_neuris"
                    android:textColor="@color/primary_700"
                    android:text="여름"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/theme_layout_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginLeft="12dp"
                >

                <ImageView
                    android:id="@+id/theme_Btn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/unselected_rectangle" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_neuris"
                    android:text="겨울"
                    android:textColor="@color/primary_700"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/frame_img"
        app:layout_constraintStart_toStartOf="@+id/frame_img"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/button_image" />


</androidx.constraintlayout.widget.ConstraintLayout>
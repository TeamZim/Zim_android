<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/record_modify_dialog_1_frame"
        android:layout_width="295dp"
        android:layout_height="415dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dialog_frame_select_theme" />

    <TextView
        android:id="@+id/record_modify_dialog_1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="여행 테마 선택"
        android:textSize="24sp"
        android:fontFamily="@font/nanum_neuris"
        android:textColor="@color/primary_700"
        app:layout_constraintEnd_toEndOf="@+id/record_modify_dialog_1_frame"
        app:layout_constraintStart_toStartOf="@+id/record_modify_dialog_1_frame"
        app:layout_constraintTop_toTopOf="@+id/record_modify_dialog_1_frame" />

    <View
        android:id="@+id/record_modify_dialog_1_line"
        android:layout_width="231dp"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="#23241B"
        app:layout_constraintEnd_toEndOf="@id/record_modify_dialog_1_title"
        app:layout_constraintStart_toStartOf="@id/record_modify_dialog_1_title"
        app:layout_constraintTop_toBottomOf="@id/record_modify_dialog_1_title" />

    <ImageView
        android:id="@+id/record_modify_dialog_1_exit_btn"
        android:layout_width="14dp"
        android:layout_height="11dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/record_modify_dialog_1_frame"
        app:layout_constraintTop_toTopOf="@+id/record_modify_dialog_1_frame"
        app:srcCompat="@drawable/exit_btn_primary_300" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="202dp"
        android:layout_height="234dp"
        android:layout_marginTop="23dp"
        app:layout_constraintEnd_toEndOf="@+id/record_modify_dialog_1_frame"
        app:layout_constraintStart_toStartOf="@+id/record_modify_dialog_1_frame"
        app:layout_constraintTop_toBottomOf="@+id/record_modify_dialog_1_line" />

    <ImageView
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="@+id/record_modify_dialog_1_frame"
        app:layout_constraintEnd_toEndOf="@+id/record_modify_dialog_1_frame"
        app:layout_constraintStart_toStartOf="@+id/record_modify_dialog_1_frame"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:srcCompat="@drawable/save_btn_unactive" />

</androidx.constraintlayout.widget.ConstraintLayout>
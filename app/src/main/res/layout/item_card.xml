
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

<!-- item_card.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?attr/selectableItemBackground"
    android:background="@android:color/transparent"

    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="474dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="0dp"
        card_view:cardBackgroundColor="@android:color/transparent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="474dp"
            android:background="@drawable/white_rounded_background">

            <!-- 카드 앞면 -->
            <FrameLayout
                android:id="@+id/card_front"
                android:layout_width="300dp"
                android:layout_height="474dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/card_front" />

                <ImageButton
                    android:id="@+id/dots_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="11dp"
                    android:background="@drawable/dots_button"
                    android:contentDescription="더보기 버튼"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:id="@+id/edit_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end|top"
                    android:visibility="gone"
                    android:background="#D7C2A4"
                    android:padding="8dp"
                    android:elevation="4dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="14dp">

                    <TextView
                        android:id="@+id/edit_button"
                        android:layout_width="64dp"
                        android:layout_height="26dp"
                        android:background="@drawable/rounded_background"
                        android:text="수정하기"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="470dp"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="0dp">


                    <TextView
                        android:id="@+id/travel_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/maru"
                        android:paddingTop="48dp"
                        android:text="여행명은 여기에 쓸거임"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="233dp"
                        android:layout_height="214dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/images" />

                    <TextView
                        android:id="@+id/travel_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/maru"
                        android:text="2025.04.02~2025.07.22"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/travel_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/maru"
                        android:text="아아아아 너무 힘들어요..."
                        android:textSize="14sp" />
                </LinearLayout>
            </FrameLayout>

            <!-- 카드 뒷면 -->
            <FrameLayout
                android:id="@+id/card_back"
                android:layout_width="300dp"
                android:layout_height="474dp"
                android:visibility="gone">

                <!-- 배경 이미지 -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="474dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/card_front" />

                <!-- 텍스트와 이미지 그리드 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="top|center_horizontal">

                    <!-- 여행 제목 -->
                    <TextView
                        android:id="@+id/travel_title_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="48dp"
                        android:fontFamily="@font/maru"
                        android:text="여행명은 여기에 쓸거임"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <!-- 이미지 그리드 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/grid_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="12dp" />


                </LinearLayout>
            </FrameLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
    <ImageButton
        android:id="@+id/flip_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="10dp"
        android:translationY="-20dp"
        android:background="@drawable/flip_bu"
        android:scaleType="centerInside"
        android:contentDescription="카드 뒤집기" />
</FrameLayout>
    android:clipToPadding="false"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="453dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="0dp"
        card_view:cardBackgroundColor="#AFA38F">

    <!-- peek 효과용 내부 고정 크기 카드 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@drawable/white_rounded_background">


        <!-- 카드 앞면 -->

            <!-- 카드 뒷면 -->
            <LinearLayout
                android:id="@+id/card_front"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="#FEFEFE"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/travel_title"
                    android:layout_width="253dp"
                    android:layout_height="27dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="48dp"
                    android:fontFamily="@font/maru"
                    android:gravity="center_horizontal|top"
                    android:lineSpacingExtra="3sp"
                    android:text="여행명은 여기에 쓸거임"
                    android:translationY="-1.57sp"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="233dp"
                    android:layout_height="214dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/images" />

                <TextView
                    android:id="@+id/travel_date"
                    android:layout_width="182dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/maru"
                    android:gravity="center_horizontal|top"
                    android:lineSpacingExtra="8sp"
                    android:text="2025.04.02~2025.07.22"
                    android:translationY="-3.77sp"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/travel_test"
                    android:layout_width="248dp"
                    android:layout_height="63dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/maru"
                    android:gravity="center_horizontal|top"
                    android:lineSpacingExtra="2sp"
                    android:text="아아아아 너무 힘들어요 나좀 제발 코딩 그만하고 싶어 이거 진짜 개애베"
                    android:translationY="-1.08sp"
                    android:textSize="14sp"/>


            </LinearLayout>

            <LinearLayout
    android:id="@+id/card_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#FEFEFE"
    android:visibility="gone">
    <TextView
        android:text="뒷면"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
</FrameLayout>
    </androidx.cardview.widget.CardView>
    </FrameLayout>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Zim_android" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/maru</item>
        <item name="android:textSize">12sp</item>
        <item name="android:windowBackground">@drawable/white_background</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">@font/maru</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="some_id">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#272727</item>
    </style>
    <style name="BottomNavActiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/maru</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#272727</item>
        <item name="android:lineSpacingExtra">0dp</item> <!-- active 시 색상 -->
    </style>

    <style name="BottomNavInactiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/maru</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#A7A4A0</item>
        <item name="android:lineSpacingExtra">0dp</item> <!-- inactive 시 색상 -->
    </style>


    <!-- 과거 기록 추가의 드롭다운 테마 설정 -->
    <style name="AddRecordDropdownPopupTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:popupBackground">@drawable/add_record_dropdown_bg</item>
    </style>


</resources>
